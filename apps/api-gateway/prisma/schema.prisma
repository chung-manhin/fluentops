generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  createdAt    DateTime       @default(now())
  refreshTokens RefreshToken[]
  recordings    Recording[]
  assessments   Assessment[]
}

model RefreshToken {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash     String
  expiresAt     DateTime
  revokedAt     DateTime?
  rotatedFromId String?
  createdAt     DateTime  @default(now())

  @@index([userId])
  @@index([tokenHash])
}

model Recording {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  objectKey   String            @unique
  mimeType    String            @default("audio/webm")
  sizeBytes   Int               @default(0)
  durationMs  Int?
  status      RecordingStatus   @default(PENDING)
  createdAt   DateTime          @default(now())

  @@index([userId])
}

enum RecordingStatus {
  PENDING
  UPLOADED
}

model Assessment {
  id               String            @id @default(cuid())
  userId           String
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  traceId          String            @unique @default(cuid())
  inputType        AssessmentInput
  inputText        String?
  recordingId      String?
  status           AssessmentStatus  @default(QUEUED)
  rubricJson       Json?
  feedbackMarkdown String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  events           AssessmentEvent[]
  @@index([userId])
}

model AssessmentEvent {
  id           String              @id @default(cuid())
  assessmentId String
  assessment   Assessment          @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  seq          Int
  type         AssessmentEventType
  payloadJson  Json
  createdAt    DateTime            @default(now())
  @@index([assessmentId])
}

enum AssessmentInput {
  TEXT
  RECORDING
}

enum AssessmentStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

enum AssessmentEventType {
  PROGRESS
  TOKEN
  FINAL
  ERROR
}
