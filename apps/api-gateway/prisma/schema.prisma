generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  createdAt    DateTime       @default(now())
  refreshTokens RefreshToken[]
  recordings    Recording[]
  assessments   Assessment[]
  balance       UserBalance?
  orders        Order[]
  ledger        CreditLedger[]
}

model RefreshToken {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash     String
  expiresAt     DateTime
  revokedAt     DateTime?
  rotatedFromId String?
  createdAt     DateTime  @default(now())

  @@index([userId])
  @@index([tokenHash])
}

model Recording {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  objectKey   String            @unique
  mimeType    String            @default("audio/webm")
  sizeBytes   Int               @default(0)
  durationMs  Int?
  status      RecordingStatus   @default(PENDING)
  createdAt   DateTime          @default(now())

  @@index([userId])
}

enum RecordingStatus {
  PENDING
  UPLOADED
}

model Assessment {
  id               String            @id @default(cuid())
  userId           String
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  traceId          String            @unique @default(cuid())
  inputType        AssessmentInput
  inputText        String?
  recordingId      String?
  status           AssessmentStatus  @default(QUEUED)
  rubricJson       Json?
  feedbackMarkdown String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  events           AssessmentEvent[]
  @@index([userId])
  @@index([userId, createdAt])
}

model AssessmentEvent {
  id           String              @id @default(cuid())
  assessmentId String
  assessment   Assessment          @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  seq          Int
  type         AssessmentEventType
  payloadJson  Json
  createdAt    DateTime            @default(now())
  @@index([assessmentId])
}

enum AssessmentInput {
  TEXT
  RECORDING
}

enum AssessmentStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

enum AssessmentEventType {
  PROGRESS
  TOKEN
  FINAL
  ERROR
}

enum PlanType {
  CREDITS
  SUBSCRIPTION
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PayProvider {
  ALIPAY
  MOCK
}

model Plan {
  id         String   @id @default(cuid())
  code       String   @unique
  name       String
  type       PlanType
  credits    Int?
  priceCents Int
  createdAt  DateTime @default(now())
  orders     Order[]
}

model UserBalance {
  id        String    @id @default(cuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  credits   Int       @default(0)
  expiresAt DateTime?
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  planId          String
  plan            Plan        @relation(fields: [planId], references: [id])
  amountCents     Int
  status          OrderStatus @default(PENDING)
  provider        PayProvider
  providerTradeNo String?
  createdAt       DateTime    @default(now())
  paidAt          DateTime?
  @@index([userId])
  @@index([planId])
  @@index([userId, createdAt])
}

model CreditLedger {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  delta     Int
  reason    String
  refId     String?
  createdAt DateTime @default(now())
  @@index([userId])
}
